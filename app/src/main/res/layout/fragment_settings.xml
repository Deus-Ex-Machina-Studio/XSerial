<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@color/colorTerminalText_4"
        android:fontFamily="@font/bront_font"
        android:text="@string/saveButton"
        android:textColor="@color/colorTerminalText_1"
        android:textColorHighlight="@color/colorTerminalText_2"
        android:textColorHint="@color/colorTerminalText_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/colorTerminalText_4"
        android:fontFamily="@font/bront_font"
        android:text="@string/loadButton"
        android:textColor="@color/colorTerminalText_1"
        android:textColorHighlight="@color/colorTerminalText_2"
        android:textColorHint="@color/colorTerminalText_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/baudRateSpinner"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/colorTerminalText_4"
        android:entries="@array/baudrates"
        android:popupBackground="@color/colorTerminalText_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Spinner>

</androidx.constraintlayout.widget.ConstraintLayout>